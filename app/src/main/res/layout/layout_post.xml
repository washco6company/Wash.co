<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewPost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_fav">
        <TextView
                android:id="@+id/tv_laundry_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laundryname"
                android:textAlignment="center"
                android:textSize="20sp"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:nextFocusLeft="@id/tv_laundry_name"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginStart="15dp"
            android:background="?attr/selectableItemBackground"/>
            <TextView
                android:id="@+id/fav_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="1dp"
                android:textSize="20sp"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_below="@id/layout_fav"
            android:src="@drawable/ic_launcher_background" />

        <!--<TextView-->
        <!--android:id="@+id/tv_title_post"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/img_post"-->
        <!--android:text="Promotion" />-->

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_post"
            android:text="Address"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:text="Price"
            android:textSize="15sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>